<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UI.Avalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.Avalonia.Converters"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Width="600" Height="400"
        x:Class="UI.Avalonia.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        
		WindowStartupLocation="CenterScreen"
		CanResize="False"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="PreferSystemChrome"
        SystemDecorations="Full"
        
		Background="Transparent"
        TransparencyLevelHint="Mica, AcrylicBlur, Blur"
        
		Icon="/Assets/icon.ico"
        Title="PS3 Disc Dumper"
        
        Loaded="OnLoaded"
        Closing="OnClosing"
        >
        <!--
        Background:
        accent: #0094ff
        Mica Dark: #e0202020
        Mica Light: #d0f3f3f3
         -->

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <local:ColorConverter x:Key="ColorConverter"/>
        <local:ValidationColorConverter x:Key="ValidationColorConverter"/>
        <local:UpdateColorConverter x:Key="UpdateColorConverter"/>
        <local:ValidationSymbolConverter x:Key="ValidationSymbolConverter"/>
        <local:UpdateSymbolConverter x:Key="UpdateSymbolConverter"/>
    </Window.Resources>
        
    <Panel>
	    <ExperimentalAcrylicBorder IsHitTestVisible="False">
		    <ExperimentalAcrylicBorder.Material>
			    <ExperimentalAcrylicMaterial
				    BackgroundSource="Digger"
				    TintColor="{Binding TintColor, Converter={StaticResource ColorConverter}}"
				    TintOpacity="{Binding TintOpacity}"
				    MaterialOpacity="{Binding MaterialOpacity}"
				    PlatformTransparencyCompensationLevel="{Binding LuminosityOpacity}"/>
		    </ExperimentalAcrylicBorder.Material>
	    </ExperimentalAcrylicBorder>
	    
	    <!-- title bar -->
		<TextBlock HorizontalAlignment="Left" VerticalAlignment="Top"
		           Margin="17 17 0 0"
		           FontFamily="{Binding SmallFontFamily}" FontSize="12" RenderOptions.TextRenderingMode="Antialias"
		           Text="{Binding TitleWithVersion}"/>
		<Button HorizontalAlignment="Right" VerticalAlignment="Top"
		        Margin="0 0 138 0" Width="46" Height="31"
		        Background="Transparent" CornerRadius="0"
		        HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0"
		        IsVisible="{Binding UpdateInfo, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
		>
			<TextBlock FontFamily="{Binding SymbolFontFamily}" FontSize="18" RenderOptions.TextRenderingMode="Antialias"
	                   Text="{Binding UpdateInfo, Converter={StaticResource UpdateSymbolConverter}}"
	                   Foreground="{Binding UpdateIsPrerelease, Converter={StaticResource UpdateColorConverter}}"/>
		</Button>
		
	    <!-- top -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
	        <StackPanel Margin="8 24 8 8" Orientation="Horizontal" HorizontalAlignment="Center">
		        <TextBlock FontFamily="{Binding SymbolFontFamily}" FontSize="32" RenderOptions.TextRenderingMode="Antialias"
		                   Margin="0 0 8 0" VerticalAlignment="Center"
		                   Foreground="{Binding Success, Converter={StaticResource ValidationColorConverter}}"
		                   Text="{Binding Success, Converter={StaticResource ValidationSymbolConverter}}"/>
		        <TextBlock FontSize="32" RenderOptions.TextRenderingMode="Antialias"
		                   Text="{Binding StepTitle}"/>
	        </StackPanel>
	        <TextBlock RenderOptions.TextRenderingMode="Antialias"
	                   TextAlignment="Center"
	                   Text="{Binding StepSubtitle}">
		        <TextBlock.IsVisible>
			        <MultiBinding Converter="{x:Static BoolConverters.Or}">
				        <Binding Path="StepSubtitle" Converter="{x:Static StringConverters.IsNotNullOrEmpty}"/>
				        <Binding Path="ProductCode" Converter="{x:Static StringConverters.IsNullOrEmpty}"/>
			        </MultiBinding>
		        </TextBlock.IsVisible>
	        </TextBlock>
	        
	        <!-- middle -->
	        <Expander IsExpanded="{Binding DiscInfoExpanded}" Margin="20" Width="500"
	                  IsVisible="{Binding ProductCode, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
		        <Expander.Header >
				    <TextBlock Text="{Binding GameTitle}"/>
		        </Expander.Header>
		        <Grid ColumnDefinitions="100,*" RowDefinitions="*,*,*" VerticalAlignment="Bottom">
			        <TextBlock Grid.Row="0" Grid.Column="0" >Product Code</TextBlock>
			        <TextBlock Grid.Row="0" Grid.Column="1" Foreground="DimGray" Text="{Binding ProductCode}" Name="ProductCode"></TextBlock>
			        <TextBlock Grid.Row="1" Grid.Column="0">Dump Size</TextBlock>
			        <TextBlock Grid.Row="1" Grid.Column="1" Foreground="DimGray" Text="{Binding DiscSizeInfo}"></TextBlock>
			        <TextBlock Grid.Row="2" Grid.Column="0">Disc Key</TextBlock>
			        <TextBlock Grid.Row="2" Grid.Column="1" Foreground="DimGray" Text="{Binding DiscKeyName}"></TextBlock>
		        </Grid>
	        </Expander>
	        
	        <!-- bottom -->
	        <Button HorizontalAlignment="Center" Width="200" Height="48"
	                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
	                Background="{Binding AccentColor}" Foreground="White"
	                IsVisible="{Binding !FoundDisc}"
	                Command="{Binding ScanDiscsCommand}"
		    >Rescan disc devices</Button>
	        <Button HorizontalAlignment="Center" Width="200" Height="48"
	                HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
	                Background="{Binding AccentColor}" Foreground="White"
	                Command="{Binding DumpDiscCommand}">
		        <Button.IsVisible>
			        <MultiBinding Converter="{x:Static BoolConverters.And}">
				        <Binding Path="DumperIsReady"></Binding>
				        <Binding Path="!DumpingInProgress"></Binding>
			        </MultiBinding>
		        </Button.IsVisible>
		        Start
	        </Button>
	        
	        <ProgressBar Width="500"
	                     ShowProgressText="True" Foreground="{Binding AccentColor}"
	                     IsIndeterminate="{Binding !Progress}"
	                     Minimum="0" Maximum="10000" Value="{Binding Progress}"
	                     IsVisible="{Binding DumpingInProgress}"/>
	        <TextBlock Width="500" Margin="6"
	                   TextAlignment="Center"
	                   FontFamily="{Binding SmallFontFamily}" FontSize="10" RenderOptions.TextRenderingMode="Antialias"
	                   Foreground="DimGray"
	                   IsVisible="{Binding DumpingInProgress}"
	                   Text="{Binding ProgressInfo}"
	                   ></TextBlock>
        </StackPanel>
    </Panel>

</Window>
